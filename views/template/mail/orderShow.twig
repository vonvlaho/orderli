                                                        <td align="left" style="font-family: sans-serif; font-size: 16px; vertical-align: top; padding-bottom: 15px;" valign="top">
                                                            {{ dish.quantity }}
                                                        </td>
                                                        <td align="left" style="font-family: sans-serif; font-size: 16px; vertical-align: top; padding-bottom: 15px;" valign="top">
                                                            {{ dish.name }}
                                                        </td>
                                                        <td align="right" style="font-family: sans-serif; font-size: 16px; vertical-align: top; padding-bottom: 15px; float: right;" valign="top">
                                                            {{ dish.price }} €
                                                        </td>
                                                    </tr>
                                                    {% endfor %}
                                                    <tr>
                                                        <td>&ensp;</td>
                                                        <td align="left" style="font-family: sans-serif; font-size: 16px; vertical-align: top; padding-bottom: 15px;" valign="top">
                                                            Total
                                                        </td>
                                                        <td align="right" style="font-family: sans-serif; font-size: 16px; vertical-align: top; padding-bottom: 15px; float: right; border-top: 1px solid #4a4a4a;" valign="top">
